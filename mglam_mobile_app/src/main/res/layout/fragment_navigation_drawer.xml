<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_translucent"
    tools:context="co.malm.mglam_reads.mobile.fragments.NavigationDrawerFragment">

    <FrameLayout
        android:id="@+id/drawer_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/drawer_header_img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom|right"
            android:background="@color/black_translucent"
            android:drawableRight="@android:drawable/ic_menu_search"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/category_search_title"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryLight"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/drawer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/drawer_head">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/drawerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_translucent"
            android:clickable="true"
            android:scrollbars="vertical" />
    </FrameLayout>

</RelativeLayout>
