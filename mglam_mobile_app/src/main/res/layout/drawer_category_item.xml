<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_layout_height"
    android:clickable="true">

    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/navigation_drawer_horizontal_margin"
        android:layout_marginRight="@dimen/navigation_drawer_horizontal_margin"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="2"
        android:text="@string/dummyTitleText"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="14sp" />
</RelativeLayout>